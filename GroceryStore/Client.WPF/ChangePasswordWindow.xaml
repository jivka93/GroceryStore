<Window x:Class="Client.WPF.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.WPF"
        mc:Ignorable="d"
        Title="ChangePasswordWindow" Height="285.271" Width="300">

    <StackPanel HorizontalAlignment="Left" Margin="21,10,0,10" Width="252">

        <TextBlock Text="Username:" Margin="0 10 0 0"/>
        <TextBox x:Name="UsernameTextBox"/>

        <TextBlock Text="Old password:"  Margin="0 10 0 0"/>
        <PasswordBox x:Name="OldPasswordTextBox" PasswordChar="*"/>

        <TextBlock Text="New password:"  Margin="0 10 0 0"/>
        <PasswordBox x:Name="Password1TextBox" PasswordChar="*"/>

        <TextBlock Text="Repeat new password:"  Margin="0 10 0 0"/>
        <PasswordBox x:Name="Password2TextBox" PasswordChar="*"/>

        <Button x:Name="UpdatePasswordButton" Click="UpdatePasswordButton_Click"  Content="UpdatePassword"   Margin="50 30 50 0"/>

    </StackPanel>

</Window>
