<Window x:Class="Client.WPF.RegisterUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.WPF"
        mc:Ignorable="d"
        Title="RegisterUserWindow" Height="400" Width="300"
        WindowStartupLocation="Manual" 
        Left="430" Top="150">
       
    <StackPanel HorizontalAlignment="Left" Height="350" Margin="10,10,0,0" VerticalAlignment="Top" Width="280">
        
        <TextBlock Text="Username * " Margin="0 10 0 0"/>
        <TextBox x:Name="UsernameTextBox"/>

        <TextBlock Text="Password *"  Margin="0 10 0 0"/>
        <PasswordBox x:Name="PasswordTextBox" PasswordChar="*"/>

        <TextBlock Text="First name"  Margin="0 10 0 0"/>
        <TextBox  x:Name="FirstnameTextBox"/>

        <TextBlock Text="Last name"  Margin="0 10 0 0"/>
        <TextBox  x:Name="LastnameTextBox"/>

        <TextBlock Text="Phone number *"  Margin="0 10 0 0"/>
        <TextBox  x:Name="PhoneTextBox"/>

        <Button x:Name="SubmitButton" Click="SubmitButton_Click"  Content="Submit"   Margin="50 30 50 0"/>

    </StackPanel>

</Window>
 