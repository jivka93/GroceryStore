<Window x:Class="Client.WPF.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.WPF"
        mc:Ignorable="d"
        Title="LoginWindow" Height="200" Width="300"
        WindowStartupLocation="Manual" 
        Left="390" Top="300">
    
    <StackPanel HorizontalAlignment="Left" Height="150" Margin="10,10,0,0" VerticalAlignment="Top" Width="280">
        <TextBlock Text="Username:" Margin="20 10 20 0"/>
        <TextBox x:Name="UsernameTextBox" Margin="20 2 20 0"/>

        <TextBlock Text="Password:" Margin="20 10 20 0"/>
        <PasswordBox x:Name="PasswordTextBox" PasswordChar="*"  Margin="20 2 20 0"/>

        <Button x:Name="SignInButton" Click="SignInButton_Click"  Content="Sign in"   Margin="90 30 90 0"/>
    </StackPanel>
    
</Window>
