        <TextBox Cursor="Arrow" BorderThickness="0" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="10,116,0,0" TextWrapping="Wrap" Text="Number:" VerticalAlignment="Top" Width="53"/>
        <TextBox Cursor="Arrow" BorderThickness="0" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="10,158,0,0" TextWrapping="Wrap" Text="Expiration Date:" VerticalAlignment="Top" Width="88"/>
        <TextBox Cursor="Arrow" BorderThickness="0" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="10,201,0,0" TextWrapping="Wrap" Text="Holder Name:" VerticalAlignment="Top" Width="78"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="103,158,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="103,116,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166"/>
        <TextBox HorizontalAlignment="Left" Height="23" Margin="103,201,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="166"/>
        <Button Name="PayButton" Content="Pay" HorizontalAlignment="Left" Margin="206,236,0,0" VerticalAlignment="Top" Width="63" Height="23" Click="PayButton_Click"/>
        <TextBox Cursor="Arrow" BorderThickness="0" IsReadOnly="True" HorizontalAlignment="Left" Height="23" Margin="103,236,0,0" TextWrapping="Wrap" Text="Money" VerticalAlignment="Top" Width="98" RenderTransformOrigin="0.858,0.478"/>
        <TextBlock HorizontalAlignment="Left" Margin="318,370,-33,-245" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top"/>

    </Grid>
</Window>
