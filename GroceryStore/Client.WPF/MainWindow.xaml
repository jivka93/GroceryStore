<Window x:Class="Client.WPF.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client.WPF"
        mc:Ignorable="d"
        Title="MainWindow" Width="1034.667">
    
    <ScrollViewer Background="Crimson">
        <Border>

            <StackPanel  Background="Crimson"  >

                <StackPanel Background="Crimson" Height="149" Margin="0,0,0.333,0" RenderTransformOrigin="0.5,0.5">

                    <StackPanel.RenderTransform>
                        <TransformGroup>
                            <ScaleTransform/>
                            <SkewTransform AngleX="1.66"/>
                            <RotateTransform/>
                            <TranslateTransform X="1.971"/>
                        </TransformGroup>
                    </StackPanel.RenderTransform>

                    <!--Navigation-->
                    <Grid Margin="10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="4*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Button x:Name="LoginButton" Click="LoginButton_Click" Margin="0 5 14 5" Grid.Column="0" Content="Login" FontSize="20" Visibility="Visible"/>
                        <Button x:Name="MyProfileButton" Click="MyProfileButton_Click" Margin="0 5 14 5" Grid.Column="0" Content="My profile" FontSize="20" Visibility="Hidden"/>
                        <Button x:Name="RegisterButton" Click="RegisterButton_Click" Margin="0 5 14 5" Grid.Column="1" Content="Register" FontSize="20" Visibility="Visible"/>
                        <Button x:Name="LogoutButton" Click="LogoutButton_Click" Margin="0 5 14 5" Grid.Column="1" Content="Logout" FontSize="20" Visibility="Hidden"/>
                        <TextBlock Grid.Column="2" Text="GroceryStore" FontWeight="Bold" Height="50" FontSize="35" Padding="10 0 0 0" TextAlignment="Center" Margin="67.333,0,164.333,0" Foreground="White"/>
                        <Button x:Name="ShoppingCartButton" Click="ShoppingCartButton_Click" Margin="519.333,5,0.333,5" Grid.Column="2" Content="ShoppingCart" FontSize="20" Grid.ColumnSpan="2"/>
                    </Grid>

                    <!--Categories-->
                    <Canvas>
                        <StackPanel>
                            <TextBlock  Text="Categories" FontWeight="Bold" FontSize="20" Padding="10 0 0 5" Foreground="White"/>
                            <ComboBox SelectedIndex="0" Name="cmbCategories" Width="273" FontSize="15" Margin="10 0 0 0" Height="31" SelectionChanged="cmbCategories_SelectionChanged">
                            </ComboBox>
                        </StackPanel>
                    </Canvas>

                    <!--Search Bar-->
                    <TextBlock Text="Search Product" FontWeight="Bold" Height="32" FontSize="20" Margin="784,0,0,0" RenderTransformOrigin="2.269,0.531" Foreground="White" />
                    <TextBox x:Name="searchBar"  KeyDown="SearchBar_Enter" Grid.Column="2" Height="34" Margin="746,0,10,0" RenderTransformOrigin="0.504,0.571" />

                </StackPanel>

                <Image Source="https://serving.photos.photobox.com/80767000b7ef3c80748c0f2da58531e94a0232aff34cad2de9870851e4c52826d3fdaf90.jpg"></Image>
                    
                    <Grid Background="White" Margin="20 20 20 20" >
                        <Grid.Effect>
                            <DropShadowEffect BlurRadius="15" Direction="-90" RenderingBias="Quality" ShadowDepth="2"/>
                        </Grid.Effect>

                        <!--Products-->
                        <!--<ItemsControl Name="ProductsContent">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="10 5 10 5">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                            <ColumnDefinition/>
                                        </Grid.ColumnDefinitions>

                                        <StackPanel Grid.Column="4">
                                            <Image Source="{Binding Picture}" Height="150" Width="150"/>
                                            <TextBlock Text="{Binding Name}" TextAlignment="Center" FontWeight="Bold" FontSize="20" />
                                            <TextBlock Text="{Binding Price}" TextAlignment="Center" FontWeight="Bold" FontSize="17"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>-->

                        <ItemsControl Name="ProductsContent">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Grid Margin="10 5 10 5" Height="200" Width="200">
                                        <StackPanel>
                                            <Image Source="{Binding Picture}" Height="150" Width="150"/>
                                            <TextBlock Text="{Binding Name}" TextAlignment="Center" FontWeight="Bold" FontSize="16" />
                                            <TextBlock Text="{Binding Price}" TextAlignment="Center" FontWeight="Bold" FontSize="12"/>
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>


                        <!--Pages Navigation--><!--
                        <Grid Margin="10">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="3*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="3*"/>
                            </Grid.ColumnDefinitions>
                            <Button x:Name="NextButton" Click="NextButton_Click" Margin="0 5 14 5" Grid.Column="1" Content="Previous" FontSize="20" Visibility="Visible"/>
                            <Button x:Name="PreviousButton" Click="PreviousButton_Click" Margin="0 5 14 5" Grid.Column="2" Content="Next" FontSize="20" Visibility="Visible"/>
                        </Grid>-->

                    </Grid>
                    
                <!--Search bar-->

                <!--TOTAL-->
                <!--
            <TextBlock Grid.Column="3" Text="0.00 $" FontWeight="Bold" Height="30" FontSize="20" Padding="60 0 0 0" />-->

            </StackPanel>

        </Border>
    </ScrollViewer>
</Window>